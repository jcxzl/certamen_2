<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    >

    <TextView
        android:layout_width = "match_parent"
        android:layout_height= "wrap_content"
        android:text=":SS"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft = "12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:id="@+id/nombre"
        />

    <TextView
        android:layout_width = "match_parent"
        android:layout_height= "wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="#000"
        android:text="Aquí iría la descripción del git, capaz de proveer espacio sufiente para todo el
        texto y descripción que debe ir aquí"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:id="@+id/descripcion"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/nombre"
        android:layout_toEndOf="@+id/nombre" />

    <TextView
        android:layout_width = "match_parent"
        android:layout_height= "wrap_content"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:text="09-09-09"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:id="@+id/actualizacion"/>

</LinearLayout>